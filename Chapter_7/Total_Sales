WEEK = 7

def main():
    count = 1
    total = 0
    days = [0] * WEEK

    for index in range(WEEK):
        print("Enter a store's sale for day ", index + 1, ': ', sep='', end='')
        days[index] = float(input())

    for i in  days:
        print("day", count, "sale is : ", i, "$" )
        count += 1
        total += i
    print("===============")
    print('Total sale for a week: ', total, "$")
#    for i in range(WEEK):
main()
